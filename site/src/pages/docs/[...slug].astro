---
import { getCollection, render } from "astro:content";
import DocsLayout from "../../layouts/DocsLayout.astro";

function normalizeId(id: string) {
  return id.replace(/\.md$/i, "");
}

const entries = (await getCollection("docs"))
  .filter((entry) => !entry.data.draft)
  .sort(
    (a, b) =>
      (a.data.order ?? Number.MAX_SAFE_INTEGER) -
        (b.data.order ?? Number.MAX_SAFE_INTEGER) || a.data.title.localeCompare(b.data.title)
  );

const primaryIds = new Set(["index", "migration-plan", "api/index"]);
const primaryNav = entries
  .filter((entry) => primaryIds.has(normalizeId(entry.id)))
  .map((entry) => ({
    title: entry.data.title,
    href: `/docs/${normalizeId(entry.id)}`
  }));

const apiNav = entries
  .filter((entry) => normalizeId(entry.id).startsWith("api/") && normalizeId(entry.id) !== "api/index")
  .map((entry) => ({
    title: entry.data.title.startsWith("ultraplot.")
      ? entry.data.title.replace(/^ultraplot\./, "")
      : entry.data.title,
    href: `/docs/${normalizeId(entry.id)}`
  }));

export async function getStaticPaths() {
  const pages = (await getCollection("docs")).filter((entry) => !entry.data.draft);
  return pages.map((entry) => ({
    params: { slug: entry.id.replace(/\.md$/i, "") },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const currentHref = `/docs/${normalizeId(entry.id)}`;
const { Content } = await render(entry);
---

<DocsLayout title={entry.data.title} primaryNav={primaryNav} apiNav={apiNav} currentHref={currentHref}>
  <Content />
</DocsLayout>
